#include<stdio.h>
#include<string.h>
int main()
{
int i, j, k;

char s[100];
int length =0, temp;
int i=0;
printf("Enter a string");
scanf("%s", s);
while (s[i]!='\0')
{ 
length ++;
i++;
}
printf("Length of the string is: %d\n", length);
char rev[100];
int j=0;
int k;
for (k =length -1; k >=0; k--)
{
rev[j] = s[k];
j++;
}
rev[j]='\0';
printf("Reversed string is: %s\n", rev);

char s2[100], concat[200];
printf("Enter another string to concatenate :");
scanf("%s", s2);
int m=0, n=0;
while (s[m] != '\0')
{
concat[m]=s[m];
m++;
}
while (s2[n]!= '\0')
{
concat[m] =s2[n];
m++;
n++;
}
concat[m]='\0';
printf("Concatenated string is : %s\n", concat);
int comp = 1;
i = 0;
while (s[i]!='\0' && s2[i]!='\0')
{
if (s[i]!= s2[i])
{
comp = 0;
break;
}
i++;
}
if(comp && s[i] == '0' && s2[i]== '0')
printf("The two strings are equal\n");
else
printf("The two strings are not equa\n");

int flag =1;
for (i=0; i<length; i++)
{
if (s[i]!= rev[i])
{
flag=0;
break;
}
}
if (flag)
printf("The string is a palindrome\n");
else
printf("the string is not a palindrome\n");

 int vowels=0, consonants=0;
 for (i=0; i<length; i++)
 {
 char ch = s[i];
 if (ch=='a' || ch=='e' || ch=='i' || ch=='o' ||ch=='u')
 vowels++;
 else if ((ch>='a' && ch<='z') || (ch>='A' && ch<='Z'))
 consonants++;
 }
 printf("Number of vowels: %d\n", vowels);
 printf("Number of consonants: %d\n", consonants);

char sentance[200], word[50], replace[50], newsentance[200];
int found=0;
printf("Enter the word to find: ");
scanf("%s", word);
printf("Enter the word to replaace with: ");
scanf("%s", replace);
for(i = 0; sentance[i] != '\0';
j=0;
while (sentance [i + j] == word[j] && word[j] != '\0')
{
j ++;
}
if (word[j] == '\0' && (sentance[i + j] == ' ' || sentance[i + j] 
found =1;
break;
if (found) 
{
for (k= 0; k<i; k++)
{
newsentance[k] = sentance[k];
}
}
int 1=0;
while (replace[1] != '\0'
{
newsentance[k++] = replace [1++];
}
newsentance[k] = '\0';
printf("Modified sentance : %s\n", newsentance);
else 
{
printf("Word not found in the sentance. \n");
}
return 0;
}
