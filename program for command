/* Accept two numbers and operators(+,-,*) as command line arguments.
b. Perform the operations on the numbers and display the result
c. handle invalid inputs and display an appropriate error message.
*/

#include<stdio.h>
#include<stdlib.h>

int main (int argc, char * argv[]){

if(argc !=4){
printf("Error : invalid number of arguments. \n");
printf("usage : <program> <number1> <operator> <number2>\n");
return 1;
}
double num1 = atof(argv[1]);
double num2 = atof(argv[3]);
char op = argv[2][0];
double result;

switch (op){
case '+':
result = num1 + num2;
break;

case '-':
result = num1 - num2;

case '*':
result = num1 * num2;

case '/':
if (num2 == 0){
printf("Error : Division by zero is not allowed. \n");
return 1;
}
result = num1 / num2;
break;

default:
printf("Error: Invalid operator '%c'. Use +,-,*, or /.\n", op);
return 1;
}
printf("result : %.2f\n", result);
return 0;
}
