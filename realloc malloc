/*write a program in c to create an array using dynamic memory allocation resize it display its elements and free the allocated memory after use*/
#include<stdio.h>
#include<stdlib.h>

int main(){
int *arr;
int n, newsize, i;

printf("Enter initial number of elements :");
scanf("%d", &n);
arr = (int *)malloc(n* sizeof(int));
if (arr == NULL){
printf("Memory of allocated!\n");
return 1;
}
printf("Enter number of elements:", n);
for (i=0; i<n; i++){
scanf("%d", &arr[i]);
}
printf("Enter new size of array :");
scanf("%d", &newsize);

arr = (int *)realloc(arr, newsize * sizeof(int));
if ( arr == NULL)
{
printf("Memory reallocation failed!\n");
return 1;
}
if(newsize >n){
printf("Enter %d more elements :\n", newsize - n);
for ( i = n; i<newsize ; i++) {
scanf("%d", &arr[i]);
}
}
printf("Array elements : \n");
for (i = 0; i < newsize ; i++){
printf("%d", arr[i]);
}
free(arr);
return 0;
}
/*Enter initial number of elements :10  
